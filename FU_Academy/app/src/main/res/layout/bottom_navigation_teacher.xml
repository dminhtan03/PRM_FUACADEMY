<?xml version="1.0" encoding="utf-8"?>
<!-- Bottom Tab Navigation Layout -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_navigation_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:elevation="8dp">

    <!-- Bottom Tab Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:baselineAligned="false">

        <LinearLayout
            android:id="@+id/tab_dashboard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/icon_dashboard"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_class"
                android:contentDescription="Dashboard Tab"
                app:tint="@color/bottom_nav_unselected" />

            <TextView
                android:id="@+id/label_dashboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dashboard"
                android:textSize="11sp"
                android:textColor="@color/bottom_nav_unselected"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_my_classes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/icon_my_classes"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_class"
                android:contentDescription="Classes Tab"
                app:tint="@color/bottom_nav_unselected" />

            <TextView
                android:id="@+id/label_my_classes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Classes"
                android:textSize="11sp"
                android:textColor="@color/bottom_nav_unselected"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_attendance"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/icon_attendance"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_attendance"
                android:contentDescription="Attendance Tab"
                app:tint="@color/bottom_nav_unselected" />

            <TextView
                android:id="@+id/label_attendance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attendance"
                android:textSize="11sp"
                android:textColor="@color/bottom_nav_unselected"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_grade"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/icon_grade"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_grade"
                android:contentDescription="Grades Tab"
                app:tint="@color/bottom_nav_unselected" />

            <TextView
                android:id="@+id/label_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grades"
                android:textSize="11sp"
                android:textColor="@color/bottom_nav_unselected"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_upload"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/icon_upload"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_upload"
                android:contentDescription="Upload Tab"
                app:tint="@color/bottom_nav_unselected" />

            <TextView
                android:id="@+id/label_upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload"
                android:textSize="11sp"
                android:textColor="@color/bottom_nav_unselected"
                android:layout_marginTop="2dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
